{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/entities/*": ["./entities/*"],
      "@/integrations/*": ["./src/integrations/*"],
      "@/components/*": ["./test-stubs/components/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noEmit": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist", "scripts", "test-stubs"]
}
